<view class="container bg">
    <view class="block-2 white">
        <view class="user">
            <view class="user-box clearfix">
                <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
                <view class="user-name">
                <text class="vm">{{userName}}</text>
                <image class="vm gender-icon" src="{{userInfo.gender?'/image/gender-male.png':'/image/gender-female.png'}}"></image>
                </view>
                <view class="user-signature">{{signature||'这家伙很懒，什么都没有留下'}}</view>
            </view>
            <view class="user-content clearfix">
                <view class="user-content-item">
                    <view class="bold">{{0}}</view>
                    <view class="m-t-5">活动</view>
                </view>
                <view class="user-content-item">
                    <view class="bold">{{0}}</view>
                    <view class="m-t-5">关注</view>
                </view>
                <view class="user-content-item">
                    <view class="bold">{{0}}</view>
                    <view class="m-t-5">粉丝</view>
                </view>
            </view>
        </view>
    </view>
    <view class="block-2 m-t-10 white">
        <view class="list-box">
            <view class="list-item">
                <image class="list-icon vm" src="/image/message.png"></image>
                <text class="vm">我的消息</text>
            </view>
             <view class="list-item list-last-child">
                <image class="list-icon vm" src="/image/edit.png"></image>
                <text class="vm">我的活动列表</text>
            </view>
        </view>
    </view>
    <view class="block-2 m-t-10 white">
        <view class="list-box">
             <view class="list-item">
                <image class="list-icon vm" src="/image/setting.png"></image>
                <text class="vm">设置</text>
            </view>
             <view class="list-item list-last-child">
                <image class="list-icon vm" src="/image/about.png"></image>
                <text class="vm">关于</text>
            </view>
        </view>
</view>
